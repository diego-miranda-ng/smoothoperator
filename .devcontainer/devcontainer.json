{
  "name": "Go Development",
  "dockerComposeFile": ["docker-compose.yml"],
  "service": "app",
  "workspaceFolder": "/app",
  "forwardPorts": [2345],
  "customizations": {
    "vscode": {
      "extensions": ["golang.go"],
      "settings": {
        "go.toolsEnvVars": {
          "GOPATH": "/go"
        },
        "go.useLanguageServer": true,
        "go.gopath": "/go",
        "go.inferGopath": true,
        "go.alternateTools": {},
        "go.delveConfig": {
          "debugAdapter": "dlv-dap",
          "apiVersion": 2,
          "showGlobalVariables": false,
          "dlvLoadConfig": {
            "followPointers": true,
            "maxVariableRecurse": 1,
            "maxStringLen": 64,
            "maxArrayValues": 64,
            "maxStructFields": -1
          }
        },
        "go.enableCodeLens": {
          "references": true,
          "runtest": true
        },
        "go.testCodeLens": true
      }
    }
  },
  "postCreateCommand": "go install golang.org/x/tools/gopls@latest && go install github.com/go-delve/delve/cmd/dlv@latest",
  "postStartCommand": "go install golang.org/x/tools/cmd/goimports@latest"
}
