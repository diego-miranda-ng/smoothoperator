{
    "name": "Go Development",
    "dockerComposeFile": ["../docker-compose.yml"],
    "service": "app",
    "workspaceFolder": "/app",
    "customizations": {
        "vscode": {
            "extensions": [
                "golang.go"
            ],
            "settings": {
                "go.toolsEnvVars": {
                    "GOPATH": "/go"
                },
                "go.useLanguageServer": true,
                "go.gopath": "/go",
                "go.delveConfig": {
                    "debugAdapter": "dlv-dap",
                    "dlvLoadConfig": {
                        "followPointers": true,
                        "maxVariableRecurse": 1,
                        "maxStringLen": 64,
                        "maxArrayValues": 64,
                        "maxStructFields": -1
                    },
                    "apiVersion": 2,
                    "showGlobalVariables": false
                },
                "go.enableCodeLens": {
                    "references": true,
                    "runtest": true
                },
                "go.testCodeLens": true
            }
        }
    },
    "postCreateCommand": "go install golang.org/x/tools/gopls@latest",
    "postStartCommand": "go install golang.org/x/tools/cmd/goimports@latest"
} 